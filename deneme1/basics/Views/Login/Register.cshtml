@model basics.Models.UserModel

<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="px-5 ms-xl-4">
                    <img src="https://www.audi-mediacenter.com/system/production/media/1282/images/bde751ee18fe149036c6b47d7595f6784f8901f8/AL090142_web_1440.jpg?1698171883" alt="Logo"
                        class="img-fluid" style="width: 200px; height:200px; object-fit: contain;">
                </div>
                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["Message"]
                        </div>
                    }
                 

                    <form asp-action="Register" method="post" style="width: 23rem;">

                        <div class="form-outline mb-4">
                            <input type="text" id="form2Example18" class="form-control form-control-lg"
                                name="username" asp-for="username" />
                            <label class="form-label" for="form2Example18">Kullanıcı Adı</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input type="password" id="form2Example28" class="form-control form-control-lg"
                                name="password" asp-for="password" />
                            <label class="form-label" for="form2Example28">Şifre</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button type="submit" class="btn btn-dark btn-lg btn-block">Üye Ol</button>
                        </div>
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img
                    src="https://www.audi.com.tr/content/dam/nemo/models/q8/rs-q8/my-2022/nemo-derivate-startpage/feature-gallery/810x1080-rsq8_2020_1553.jpg?imwidth=768&imdensity=1"
                    alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>
